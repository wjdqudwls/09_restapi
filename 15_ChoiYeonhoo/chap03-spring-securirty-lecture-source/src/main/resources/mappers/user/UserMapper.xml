<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mycompany.springsecurirty.query.mapper.UserMapper">
    <select id="findUserByUsername" resultType="UserDTO">
        SELECT username, role FROM tbl_user WHERE username = #{ username }
    </select>

    <select id="findAllUsers" resultType="UserDTO">
        SELECT username, role FROM tbl_user
    </select>
</mapper>